<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rizaldi.cipher.Controller">
    <children>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label text="File:" />
                <TextField fx:id="pathPreview" editable="false" HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#onOpenFile" text="..." />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Original:" />
                        <TextArea fx:id="filePreview" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Result:" />
                        <TextArea fx:id="cipherPreview" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Key:" />
                <TextField fx:id="keyInput" promptText="key must be base64 character" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#onGenerate" text="Generate" />
            </children>
        </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
                <Button mnemonicParsing="false" onAction="#onEncrypt" text="Encrypt" />
                <Button mnemonicParsing="false" onAction="#onDecrypt" text="Decrypt" />
              <Button mnemonicParsing="false" onAction="#onSaveFile" text="Save" />
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
